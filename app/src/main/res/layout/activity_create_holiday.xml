<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="maxundmax.holiday4friends.create_holiday">

    <EditText
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:hint="Geben Sie einen Namen an."
        android:singleLine="true" />

    <EditText
        android:id="@+id/activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/activity_name"
        android:hint="Geben Sie eine Beschreibung an." />

    <ImageButton
        android:id="@+id/btn_image_selector"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:background="@drawable/circular"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:tint="@color/colorAccent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/image_viewer"
        android:layout_width="match_parent"
        android:layout_height="215dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/activity_description"
        android:layout_above="@id/button_write"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

    />

    <Button
        android:id="@+id/button_write"
        style="@style/FirebaseUI.Button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Speichern" />


</RelativeLayout>
