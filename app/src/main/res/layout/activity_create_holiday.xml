<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="maxundmax.holiday4friends.create_holiday">

    <EditText
        android:id="@+id/activity_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="2dp"
        android:hint="Geben Sie einen Namen an."
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="64dp"
        tools:layout_conversion_absoluteWidth="384dp" />

    <EditText
        android:id="@+id/activity_description"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:hint="Geben Sie eine Beschreibung an."
        app:layout_constraintBottom_toTopOf="@+id/btn_image_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_name"
        tools:layout_conversion_absoluteHeight="142dp"
        tools:layout_conversion_absoluteWidth="384dp" />

    <Button
        android:id="@+id/btn_image_selector"
        android:layout_width="238dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:text="Titelbild hinzufÃ¼gen"
        app:layout_constraintBottom_toTopOf="@+id/image_viewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_description"
        tools:layout_conversion_absoluteHeight="66dp"
        tools:layout_conversion_absoluteWidth="384dp" />

    <ImageView
        android:id="@+id/image_viewer"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_write"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_image_selector"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_conversion_absoluteHeight="1dp"
        tools:layout_conversion_absoluteWidth="384dp" />

    <Button
        android:id="@+id/button_write"
        style="@style/FirebaseUI.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_viewer"
        tools:layout_conversion_absoluteHeight="65dp"
        tools:layout_conversion_absoluteWidth="384dp" />


</android.support.constraint.ConstraintLayout>
